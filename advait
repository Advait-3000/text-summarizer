            font-size: 0.9rem;
            color: var(--muted-text);
        }
        
        select, input {
            padding: 0.5rem;
            border: 1px solid var(--border-color);
            border-radius: 4px;
            font-size: 0.9rem;
            background-color: var(--light-bg);
            color: var(--dark-text);
