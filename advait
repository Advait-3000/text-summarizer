        }
        
        .tab.active {
            border-bottom: 3px solid var(--accent-color);
            font-weight: 600;
            color: var(--light-text);
        }
        
        .tab:hover:not(.active) {
            background-color: var(--light-bg);
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-content.active {
            display: block;
        }
        
        .file-upload {
            border: 2px dashed var(--border-color);
            border-radius: 6px;
            padding: 2rem;
            text-align: center;
            margin-bottom: 1rem;
            transition: all 0.2s;
            background-color: var(--darker-bg);
        }
        
        .file-upload:hover {
            border-color: var(--accent-color);
        }
        
        .file-upload-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
