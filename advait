        .btn {
            background-color: var(--accent-color);
            color: var(--light-text);
            border: none;
            border-radius: 4px;
            padding: 0.7rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        
        .btn:hover {
            background-color: #4199e6;
            box-shadow: 0 0 8px rgba(88, 180, 255, 0.5);
